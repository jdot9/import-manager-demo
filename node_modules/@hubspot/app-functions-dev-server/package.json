{
  "name": "@hubspot/app-functions-dev-server",
  "version": "0.10.2",
  "description": "A tool for testing HubSpot private app functions locally",
  "engines": {
    "node": ">=20"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@hubspot/api-client": "12.0.1",
    "@hubspot/local-dev-lib": "4.0.0",
    "axios": "1.12.0",
    "body-parser": "1.20.3",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "moment": "2.30.1",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "jest": "29.5.0",
    "lint-staged": "^10.5.4",
    "memfs": "^4.9.3",
    "node-mocks-http": "^1.12.2",
    "nodemon": "^2.0.22",
    "prettier": "^3.6.2",
    "ts-jest": "29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "4.9.5"
  },
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "npm run clean && tsc",
    "lint": "echo 'No linter configured'",
    "lint:local": "eslint . && prettier --check '**/*.{ts,js,json}'",
    "prepare": "husky",
    "prettier:write": "prettier --write '**/*.{ts,js,json}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "watch": "tsc --watch",
    "npm:login": "npm_config_userconfig=~/.npmrc.public_publish bend exec npm login",
    "changeset:version": "npm_config_userconfig=~/.npmrc.public_publish changeset version",
    "changeset:publish": "npm_config_userconfig=~/.npmrc.public_publish changeset publish"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier -l",
      "eslint"
    ]
  }
}
